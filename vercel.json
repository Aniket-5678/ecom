{
    "version": 2,
    "builds": [
      {
        "src": "client/package.json",
        "use": "@vercel/node"
      },
      {
        "src": "server/package.json",
        "use": "@vercel/node"
      }
    ],
    "routes": [
      { "src": "/api/(.*)", "dest": "server/$1" },
      { "src": "/(.*)", "dest": "client/$1" }
    ],
    "rewrites": [
      { "source": "/api/(.*)", "destination": "/server/$1" },
      { "source": "/(.*)", "destination": "/client/$1" }
    ]
  }